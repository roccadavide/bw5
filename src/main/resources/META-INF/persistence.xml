<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="bw5pu">
        <class>daviderocca.entities.Abbonamento</class>
        <class>daviderocca.entities.Biglietto</class>
        <class>daviderocca.entities.GuastoMezzo</class>
        <class>daviderocca.entities.MezzoDiTrasporto</class>
        <class>daviderocca.entities.PuntoVendita</class>
        <class>daviderocca.entities.StoricoPercorrenze</class>
        <class>daviderocca.entities.Tessera</class>
        <class>daviderocca.entities.TitoloDiViaggio</class>
        <class>daviderocca.entities.Tratta</class>
        <class>daviderocca.entities.Utente</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/aziendatrasporti"/>
            <property name="javax.persistence.jdbc.user" value="daviderocca"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>